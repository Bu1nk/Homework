line = 'EWUQERQWCERCKNJWERWOUIAUIUAOAOAEDIROW'
cur_len = 0
max_len = 0
cur_letters = []

for letter in line:
    if letter in 'AEIOUY':
        cur_len += 1
        cur_letters.append(letter)
    else:
        if cur_len > max_len:
            max_len = cur_len
            letters = cur_letters
        cur_len = 0
        cur_letters = []

for i in letters:
    print(i, end='')

print('', max_len)
