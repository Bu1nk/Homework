text ='ABACBACACBACABCBCBACBACCBACCAAAABCABAAAABBCAB'
cur_len = 1 
max_len = 0 
count_max= 0 
for i in range (1,len(text)): 
    if text[i-1] == text[i]:
        cur_len+=1
    else:
        cur_len =1
    if cur_len > max_len: 
        max_len = cur_len 
        count_max=0
    if cur_len ==max_len:
        count_max+=1
print(max_len, count_max)
